        <span class="logo_1">&lt;</span>
        <span class="logo_2">/</span>
        <span class="logo_3">#</span>
        <a class="site-name" href="/"
           title="<%= theme.logo_title %>">
            <ruby>
                恶
                <rp>(</rp>
                <rt>e</rt>
                <rp>)</rp>
                魔
                <rp>(</rp>
                <rt>m</rt>
                <rp>)</rp>
                萝
                <rp>(</rp>
